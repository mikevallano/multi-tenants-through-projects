<p id="notice"><%= notice %></p>

<h1>Listing Chats</h1>

<h2>Current Project is: <%= @current_project.name %></h2>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Project</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @chats.each do |chat| %>
      <tr>
        <td><%= chat.name %></td>
        <td><%= chat.description %></td>
        <td><%= chat.project.name %></td>
        <td><%= link_to 'Show', project_chat_path(@current_project, chat) %></td>
        <td><%= link_to 'Edit', edit_project_chat_path(@current_project, chat) %></td>
        <td><%= link_to 'Destroy', project_chat_path(@current_project, chat), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Chat', new_project_chat_path %>
