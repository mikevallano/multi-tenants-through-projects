<p id="notice"><%= notice %></p>

<h1>Listing Posts</h1>

<h2>Current Project is: <%= @current_project.name %></h2>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.name %></td>
        <td><%= post.description %></td>
        <td><%= link_to 'Show', project_post_path(@current_project, post) %></td>
        <td><%= link_to 'Edit', edit_project_post_path(@current_project, post) %></td>
        <td><%= link_to 'Destroy', project_post_path(@current_project, post), method: :delete, data: { confirm: 'Are you sure?' } %></td>


      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_project_post_path %>
