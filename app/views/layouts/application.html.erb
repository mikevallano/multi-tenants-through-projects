<!DOCTYPE html>
<html>
<head>
  <title>TenantLearning</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <%= link_to "Home |", subdomain_root_url(:subdomain => @account.subdomain) if current_user.present? %> <%= link_to "Posts |", project_posts_path(:subdomain => @account.subdomain, :project_id => @current_project.slug) if @account.present? && @current_project.present? %> <%= link_to "Sign out |", destroy_user_session_path, :method => "delete" if current_user.present? %> <%= link_to "| Sign In", "/users/sign_in" unless current_user.present? %>
<%= link_to "| Sign Up", '/users/sign_up' unless current_user.present? %> <%= "| Signed in as: #{current_user.email}" if current_user.present? %> <%= link_to "| Invite a New User", new_invite_path if current_user.present? && current_user.account_owner? %>

  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>
<%= yield %>

</body>
</html>
