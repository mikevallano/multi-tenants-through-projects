<%= form_for(@invite) do |f| %>
  <% if @invite.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@invite.errors.count, "error") %> prohibited this invite from being saved:</h2>

      <ul>
      <% @invite.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </div>
  <%= f.hidden_field :sender_id, :value => current_user.id %>
  <div class="field">
    Project (needs to be scoped):<br><%= f.collection_select(:project_ids, Project.all, :id, :name, { :label => "Project" } ) %>
  </div>
  <div class="field">
    Role:<br><%= f.collection_select(:role_ids, Role.all, :id, :name, { :label => "Role" } ) %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>